@using VartanMVCv2.Domain.Entities
@using VartanMVCv2.ViewModels
@model IndexViewModel 

@{
    int parityCounter = (Model.modelinitializer.feedbackList.Count % 2 == 0) ? Model.modelinitializer.feedbackList.Count : Model.modelinitializer.feedbackList.Count - 1;
}

<!-- projects section start -->
<div class="projects_section layout_padding">
    <div class="container">
        <h1 class="our_text">Наши работы</h1>
        <p class="ipsum_text">Фото уже оконченых проектов, от наших довольных клиентов.</p>
        <div id="main_slider" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @{
                    int i = 0;
                    while (i < Model.modelinitializer.completedProjectsList.Count())
                    {
                        if (i == 0)
                        {
                            <div class="carousel-item active">
                                <div class="projects_section2">
                                    <div class="container_main2">
                                        <div class="row">
                                            @{
                                                int j = 0;
                                                while (j < 3 && i < Model.modelinitializer.completedProjectsList.Count())
                                                {
                                                    <div class="col-sm-4">
                                                        <div class="container_main1">
                                                            <img src="@Model.modelinitializer.completedProjectsList.ToList()[i].TitleImagePath" alt="Avatar" class="image" style="width:100%">
                                                            <h1 class="modern_text">@Model.modelinitializer.completedProjectsList.ToList()[i].Title</h1>
                                                            <div class="middle">
                                                                <a class="text" href="@Url.Action("FeedbackPhoto", "Home", new{Model.modelinitializer.completedProjectsList.ToList()[i].ID})">VIEW MORE</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    j++;
                                                    i++;
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <div class="projects_section2">
                                    <div class="container_main2">
                                        <div class="row">
                                            @{
                                                int j = 0;
                                                while (j < 3 && i < Model.modelinitializer.completedProjectsList.Count())
                                                {
                                                    <div class="col-sm-4">
                                                        <div class="container_main1">
                                                            <img src="@Model.modelinitializer.completedProjectsList.ToList()[i].TitleImagePath" alt="Avatar" class="image" style="width:100%">
                                                            <h1 class="modern_text">@Model.modelinitializer.completedProjectsList.ToList()[i].Title</h1>
                                                            <div class="middle">
                                                                <a class="text" href="@Url.Action("FeedbackPhoto", "Home", new{Model.modelinitializer.completedProjectsList.ToList()[i].ID})">VIEW MORE</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    j++;
                                                    i++;
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }
            </div>
            <a class="carousel-control-prev" href="#main_slider" role="button" data-slide="prev">
                <i class="fa fa-angle-left"></i>
            </a>
            <a class="carousel-control-next" href="#main_slider" role="button" data-slide="next">
                <i class="fa fa-angle-right"></i>
            </a>
        </div>
    </div>
</div>
<!-- projects section end -->
<!-- client section start -->
<div class="clients_section layout_padding">
    <div class="container">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                @{
                    int indicatorsCount = (parityCounter / 2) - 1;
                    int c = 0;
                    while (c < indicatorsCount)
                    {
                       <li data-target="#carouselExampleIndicators" data-slide-to="@c + 1"></li> 
                       c++;
                    }
                }
                @*
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>*@
            </ol>
            <div class="carousel-inner">
                @{
                    string carouselItemAction = "";                   
                    int a = 0;
                    while (a < parityCounter)
                    {
                        if (a == 0)
                        {
                            carouselItemAction = "carousel-item active";
                        }
                        else { carouselItemAction = "carousel-item"; }
                        <div class="@carouselItemAction">
                            <h1 class="client_text">Что говорят о нас, наши клиенты</h1>
                            <p class="ipsum_text">Отзывы о нашей работе</p>
                            <div class="clients_section2 layout_padding">
                                @{
                                    
                                    string clientClassPosition = "";
                                    int k = 0;
                                    while (k < 2 && a < parityCounter)
                                    {
                                        @if ((Model.modelinitializer.feedbackList.ToList()[a].ID % 2) == 0) { clientClassPosition = "client_2"; }
                                        else { clientClassPosition = "client_1"; }

                                        <div class="@clientClassPosition">
                                            <div class="row">
                                                <div class="col-sm-3">
                                                    <div class="image_7"><img src="@Model.modelinitializer.feedbackList.ToList()[a].TitleImagePath"></div>
                                                </div>
                                                <div class="col-sm-9">
                                                    <h1 class="loksans_text">@Model.modelinitializer.feedbackList.ToList()[a].FeedbackClientName</h1>
                                                    <p class="dolor_ipsum_text">@Model.modelinitializer.feedbackList.ToList()[a].FeedbackText</p>
                                                </div>
                                            </div>
                                        </div>
                                        a++;
                                        k++;
                                    }
                                }
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
<!-- client section end -->
