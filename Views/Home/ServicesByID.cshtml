@using VartanMVCv2.ViewModels
@using VartanMVCv2.Domain.Entities
@model IndexViewModel
@await Html.PartialAsync("HeaderWithoutSliderPartial")
<!-- furnitures section start -->
<div class="furnitures_section layout_padding">
    <div class="container">
        <h1 class="our_text">Перечень услуг</h1>
        <p class="ipsum_text">@Model.dataModelExample.workServicesList.ToList().Find(x=>x.ID==ViewBag.SelectedServicesID)!.Title</p>
        <div class="furnitures_section2 layout_padding">
            <div class="row">
                @{
                    foreach (WorksList worksList in Model.sortWorksList)
                    {
                        <div class="col-md-6">
                            <div class="container_main">
                                <h2 class="temper_text">@worksList.Title</h2>
                                <ul>
                                    @foreach (WorksName name in Model.dataModelExample.worksNameList)
                                    {
                                        if (name.WorksCategory.ID == worksList.ID)
                                        {
                                            <li>
                                                <h2>@name.Title</h2>
                                            </li>
                                        }
                                    }
                                </ul>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
<!-- furnitures section end -->
<!-- services section start -->
<div class="furnitures_section_secondary layout_padding">
    <div class="container">
        <div class="services_section2 layout_padding">
            <div class="row" id="row_about">
                <div class="col-lg-3 col-sm-6">
                    <h2 class="furnitures_text">ШАГ 1</h2>
                    <div class="icon_1"><img src="~/images/customer-service.png"></div>
                    <p class="present_text">
                        Бесплатная консультация по телефону
                    </p>
                </div>
                <div class="col-lg-3 col-sm-6">
                    <h2 class="furnitures_text">ШАГ 2</h2>
                    <div class="icon_1"><img src="~/images/measuring-tape.png"></div>
                    <p class="present_text">
                       Бесплатный выезд замерщика и смета в тот же день.
                    </p>
                </div>
                <div class="col-lg-3 col-sm-6">
                    <h2 class="furnitures_text">ШАГ 3</h2>
                    <div class="icon_1"><img src="~/images/shield.png"></div>
                    <p class="present_text">
                        Подписание договора в котором прописан регламент проведения работ, страховые соглашения.
                    </p>
                </div>
                <div class="col-lg-3 col-sm-6">
                    <h2 class="furnitures_text">ШАГ 4</h2>
                    <div class="icon_1"><img src="~/images/home.png"></div>
                    <p class="present_text">
                        Мы приступаем к ремонту.
                    </p>

                </div>
                <div class="col-lg-3 col-sm-6">
                    <h2 class="furnitures_text">ШАГ 5</h2>
                    <div class="icon_1"><img src="~/images/file.png"></div>
                    <p class="present_text">
                        Оплата по факту проведения работ.
                    </p>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- services section end -->
<!-- purchese services section start -->
<div class="purchese_section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1 class="purchase_text">Специальное предожение</h1>
                <p class="lorem_text">Оставьте заявку сейчас, и получите 3% скидку на стройматериалы</p>
                <div class="read_bt"><a href="@Url.Action("Contact","Home")">Оставить заявку</a> </div>
            </div>
            <div class="col-md-6">
                <div class="image_1"><img src="~/images/smiley-woman-transformed.png"></div>
            </div>
        </div>
    </div>
</div>
<!-- purchese services section end -->

@await Html.PartialAsync("FooterPartial")
<!-- copyright section start -->
<div class="copyright_section" />
<div class="container">
    @await Html.PartialAsync("AutorPartial")
</div>
<!-- copyright section end -->
@await Html.PartialAsync("ScriptsPartial")
