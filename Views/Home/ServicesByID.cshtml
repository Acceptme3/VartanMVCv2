@using VartanMVCv2.ViewModels
@using VartanMVCv2.Domain.Entities
@using VartanMVCv2.Models
@model IndexViewModel
@await Html.PartialAsync("HeaderWithoutSliderPartial")

<style>
    .tick {
        font-size: 1rem;
        white-space: nowrap;
        font-family: arial,sans-serif;
    }

    .tick-flip, .tick-text-inline {
        font-size: 2.5em;
    }

    .tick-label {
        margin-top: 1em;
        font-size: 1em;
    }

    .tick-char {
        width: 1.5em;
    }

    .tick-text-inline {
        display: inline-block;
        text-align: center;
        min-width: 1em;
    }

        .tick-text-inline + .tick-text-inline {
            margin-left: -.325em;
        }

    .tick-group {
        margin: 0 .5em;
        text-align: center;
    }

    body {
        background-color: rgb(255, 255, 255) !important;
    }

    .tick-text-inline {
        color: rgb(90, 93, 99) !important;
    }

    .tick-label {
        color: rgb(90, 93, 99) !important;
    }

    .tick-flip-panel {
        color: rgb(255, 255, 255) !important;
    }

    .tick-flip {
        font-family: !important;
    }

    .tick-flip-panel-text-wrapper {
        line-height: 1.45 !important;
    }

    .tick-flip-panel {
        background-color: rgb(59, 61, 59) !important;
    }

    .tick-flip {
        border-radius: 0.54em !important;
    }
</style>


<!-- furnitures section start -->
<div class="furnitures_section layout_padding_2" >
    <div class="head_services" id="imageBlock" style="background:url('@Url.PathToUrl(Model.WorkServicesExample!.TitleImagePath!)'); background-size:cover">
        <h1 class="furniture_text" id="colorReplaceH1">@Model.WorkServicesExample.Title</h1>
        <p class="there_text" id="colorReplaceP">@Model.WorkServicesExample.Description</p>
    </div>
    <div class="container" id="work_parent_container" style="padding-top:3vh">
        <h1 class="our_text">Перечень услуг</h1>
        <p class="ipsum_text">@Model.WorkServicesExample?.Title</p>
        <div class="furnitures_section2 layout_padding" id="work_main_container">
            <div class="w_serv_conteiner" id="work_child_container">
                @{
                    foreach (WorksCategory category in Model.WorkServicesExample!.WorksCategories)
                    {
                        <div class="w_serv_item">
                            <div class="container_main">
                                <h2 class="temper_text">@category.Title</h2>
                                <ul>
                                    @foreach (Work name in category.Works)
                                    {
                                            <li>
                                                <h2 class="temper_text_second">@name.Title</h2>
                                            </li>                                       
                                    }
                                </ul>
                            </div>
                        </div>
                    }
                }
            </div>
            <div class="price_section">
                <div class="read_bt"><a href="#">@Model.WorkServicesExample.Price</a> </div>
                <p class="micro_p">*стоимость на комплексные услуги складывается из множества факторов и меняется время от времени, пожалуйста, уточняйте цены по телефону.</p>             
            </div>
        </div>
    </div>
</div>
<!-- furnitures section end -->
<!-- services section start -->
<div class="furnitures_section_secondary layout_padding">
    <div class="container">
        <div class="services_section2 layout_padding">
            <div class="row" id="row_about">
                <div class="col-lg-3 col-sm-6">
                    <h2 class="furnitures_text">ШАГ 1</h2>
                    <div class="icon_1"><img src="~/images/customer-service.png"></div>
                    <p class="present_text">
                        Бесплатная консультация по телефону
                    </p>
                </div>
                <div class="col-lg-3 col-sm-6">
                    <h2 class="furnitures_text">ШАГ 2</h2>
                    <div class="icon_1"><img src="~/images/measuring-tape.png"></div>
                    <p class="present_text">
                       Бесплатный выезд замерщика и смета в тот же день.
                    </p>
                </div>
                <div class="col-lg-3 col-sm-6">
                    <h2 class="furnitures_text">ШАГ 3</h2>
                    <div class="icon_1"><img src="~/images/shield.png"></div>
                    <p class="present_text">
                        Подписание договора в котором прописан регламент проведения работ, страховые соглашения.
                    </p>
                </div>
                <div class="col-lg-3 col-sm-6">
                    <h2 class="furnitures_text">ШАГ 4</h2>
                    <div class="icon_1"><img src="~/images/home.png"></div>
                    <p class="present_text">
                        Мы приступаем к ремонту.
                    </p>

                </div>
                <div class="col-lg-3 col-sm-6">
                    <h2 class="furnitures_text">ШАГ 5</h2>
                    <div class="icon_1"><img src="~/images/file.png"></div>
                    <p class="present_text">
                        Оплата по факту проведения работ.
                    </p>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- services section end -->
<!-- purchese services section start -->
<div class="purchese_section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1 class="purchase_text" style="font-size:300%">Специальное предложение</h1>
                <p class="lorem_text">Оставьте заявку до конца месяца, и получите 5% скидку на ремонт.</p>
                <div class="read_bt" id="read_bt_final"><a href="@Url.Action("Contact","Home")">Оставить заявку</a> </div>
            </div>
            <div class="col-md-6">
                <div class="image_1"><img src="~/images/smiley-woman-transformed.png"></div>
            </div>
        </div>
    </div>
</div>
<!-- purchese services section end -->

@await Html.PartialAsync("FooterPartial")
<!-- copyright section start -->
<div class="copyright_section" />
<div class="container">
    @await Html.PartialAsync("AutorPartial")
</div>
<!-- copyright section end -->
@await Html.PartialAsync("ScriptsPartial")

