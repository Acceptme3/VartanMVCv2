            <div class="offer_conteiner">
                <div class="carousel_grid_item" id="item_3">
                    <img src="~/images/icon54.jpg" id="offer_in_corporat" />
                    <p class="in_txt">Фиксированная стоимость в договоре</p>
                </div>
                <div class="carousel_grid_item">
                    <img src="~/images/20943572.png" id="offer_in_corporat" />
                    <p class="in_txt">Бесплатные консультации и замер</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- contact section end -->

@await Html.PartialAsync("~/Views/Shared/Section/ServicesSectionPartial.cshtml")
