@model CompletedProjectViewModel


<style>
    .form_conteier {
        padding: 1em;
        background-color: #30a2ff85;
        border-radius: 5px;
    }

    form{
        margin: 15px;
    }

    p2{
        display:block;
        margin: 2em;
    }

    input[type="file"]{
        border: double;
        margin-left: 3em;
    }

    #CP_accept {
        margin-left: 20em;
        width: 20em;
        height: 3em;
    }

    span{

    }

    label{
        font-size: 22px;
        color: black;
    }

</style>
<div class="form_conteier">
    <form id ="form_upload_id" asp-area="Admin" asp-controller="Owner" asp-action="AddCompletedProject" method="post" enctype="multipart/form-data" onsubmit="uploadPhotos('/Owner/AddCompletedProject')">
        <p2 class="validation_text">
            <label>Заголовок</label>
            <input class="text_input_form" placeholder="Заголовок" asp-for="@Model.completedProjectExample!.Title" data-val-required="Это поле не должно быть пустым" />
            <span asp-validation-for="@Model.completedProjectExample!.Title" />
        </p2>
        <p2 class="validation_text">
            <label>Описание</label>
            <input class="text_input_form" autocomplete="off" placeholder="Описание" asp-for="@Model.completedProjectExample!.Description" />
            <span asp-validation-for="@Model.completedProjectExample!.Description" />
        </p2>
        <p2 class="validation_text">
            <label>Фото</label>
            <input class="file_input_form" type="file" name="files" id="fileInput" placeholder="Фото проекта" asp-for="@Model.completedProjectPhotos" multiple accept=".jpg, .jpeg, .png" />
            <span asp-validation-for="@Model.completedProjectPhotos" />
            <progress id="progressBar" value="0" max="100"></progress>
        </p2>
        <p2 class="validation_text">

        </p2>
        <button name="acceptCompletedProject" id="CP_accept" type="submit" value="Send">Добавить</button>
    </form>
</div>